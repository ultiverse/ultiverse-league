{
	"name": "ultiverse",
	"private": true,
	"packageManager": "pnpm@9.12.3",
	"scripts": {
		"lint": "npm run lint:api; npm run lint:web",
		"lint:api": "pnpm -r --filter ./apps/api lint",
		"lint:web": "pnpm -r --filter ./apps/web lint",
		"test": "pnpm -r --filter ./apps/api test && pnpm -r --filter ./apps/web test:run",
		"test:api": "pnpm -r --filter ./apps/api test",
		"test:web": "pnpm -r --filter ./apps/web test:run",
		"test:web:watch": "pnpm -r --filter ./apps/web test:watch",
		"test:e2e": "pnpm -r --filter ./apps/api test:e2e",
		"dev:web": "pnpm --filter ./apps/web dev",
		"build:web": "pnpm --filter ./apps/web build",
		"dev:api": "pnpm --filter ./apps/api start:dev",
		"build:api": "pnpm --filter ./apps/api build",
		"build:types": "pnpm --filter ./packages/shared-types build"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"jsdom": "^27.0.0",
		"tsc-alias": "^1.8.16",
		"vitest": "^3.2.4"
	}
}
